@using System.Web.Optimization

@{
    Layout = null;

    // root de la aplicacion
    String contentRoot = Url.Content("~/");
    String ApplicationRoot = Request.Url.Scheme + "://" + Request.Url.Authority + contentRoot.Substring(0, contentRoot.Length - 1);
}

<!DOCTYPE html>
<html lang="es" data-root="@ApplicationRoot">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <!-- Base Styles -->
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/fontawesome")

</head>
<body>

    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="@ApplicationRoot"><i class="fa fa-database fa-lg"></i>&nbsp; Base Synchronizer</a>
            </div>
            <div id="navbar" class="navbar-collapse collapse" aria-expanded="false" style="height: 1px;">
                <ul class="nav navbar-nav">
                    <li class="active"><a href="#"><i class="fa fa-cogs fa-lg"></i>&nbsp; Management</a></li>
                    <li><a href="#"><i class="fa fa-user fa-lg"></i>&nbsp; Profile</a></li>
                    <li><a href="#"><i class="fa fa-question-circle fa-lg"></i>&nbsp; About</a></li>
                </ul>
            </div><!--/.nav-collapse -->
        </div>
    </nav>

    <div class="container">
        <div class="starter-template">
            @RenderBody()
        </div>
    </div>

    <!-- Base Scripts -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/script")

</body>
</html>